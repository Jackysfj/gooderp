<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- 仓库 -->
        <record id='warehouse_action' model='ir.actions.act_window'>
            <field name='name'>仓库</field>
            <field name='res_model'>warehouse</field>
            <field name='view_mode'>tree</field>
            <field name='domain'>['|', ('active', '!=', 1), ('active', '=', 1)]</field>
        </record>

        <!-- 出入库单 -->
       <record id='warehouse_order_out_action' model='ir.actions.act_window'>
            <field name='name'>出库单</field>
            <field name='res_model'>warehouse.order</field>
            <field name='view_mode'>tree,form</field>
            <field name='domain'>[('type', '=', 'outgoing')]</field>
            <field name='context'>{'default_type': 'outgoing'}</field>
            <field name='view_id' ref='warehouse_order_out_tree' />
        </record>

       <record id='warehouse_order_in_action' model='ir.actions.act_window'>
            <field name='name'>入库单</field>
            <field name='res_model'>warehouse.order</field>
            <field name='view_mode'>tree,form</field>
            <field name='domain'>[('type', '=', 'incoming')]</field>
            <field name='context'>{'default_type': 'incoming'}</field>
            <field name='view_id' ref='warehouse_order_in_tree' />
        </record>

       <record id='warehouse_order_internal_action' model='ir.actions.act_window'>
            <field name='name'>出库单</field>
            <field name='res_model'>warehouse.order</field>
            <field name='view_mode'>tree,form</field>
            <field name='domain'>[('type', '=', 'internal')]</field>
            <field name='context'>{'default_type': 'internal'}</field>
            <field name='view_id' ref='warehouse_order_internal_tree' />
        </record>

    </data>
</openerp>
