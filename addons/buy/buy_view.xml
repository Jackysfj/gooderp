<?xml version="1.0"?>
<openerp>
    <data>
    	<!-- 根菜单 -->
        <menuitem id="menu_buy_root" name="采购"/>

        <menuitem id="menu_buy_manage" name="采购" parent="menu_buy_root" sequence="1"/>

    	<record id="buy_order_tree" model="ir.ui.view">
            <field name="name">buy.order.tree</field>
            <field name="model">buy.order</field>
            <field name="arch" type="xml">
                <tree colors="grey:state=='cancel';blue:state in ('wait','confirmed');red:state in ('except_invoice','except_picking')" string="Purchase Order">
                    <field name="name" string="编号"/>
                    <field name="date" />
                    <field name="partner_id"/>
                    <field name="planned_date" invisible="context.get('quotation_only', False)"/>
                    <!-- <field name="amount_untaxed" sum="Total Untaxed amount" string="Untaxed"/>
                    <field name="amount_total" sum="Total amount"/> -->
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="buy_order_form" model="ir.ui.view">
            <field name="name">buy.order.form</field>
            <field name="model">buy.order</field>
            <field name="arch" type="xml">
                <form string="Buy Order">
                <header>
                	<button name="buy_approve" states="draft" string="审核" class="oe_highlight"/>
                    <button name="buy_confirm" states="confirmed" string="生成购货单" type="object"/>
                    <button name="action_cancel_draft" states="cancel,confirmed" string="置为草稿" type="object" />
                    <button name="action_cancel" states="draft,confirmed,approved" string="取消" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done" statusbar_colors='{"confirmed":"blue"}' readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label string="购货订单 " states='draft'/>
                            <label string="购货单 " attrs="{'invisible': [('state','=','draft')]}"/>
                            
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date" required="1"/>
                        </group>
                        <group>
                        	<field name="planned_date" required="1"/>
                            <field name="name" readonly="1"/>
                            <field name="type" widget="radio"/>
                        </group>
                    </group>
                    <field name="line_ids">
                    	<tree string="Buy Order Lines" editable="bottom">
                            <field name="goods_id"/>
                            <field name="spec"/>
                            <field name="uom_id"/>
                            <field name="warehouse_id"/>
                            <field name="quantity" sum="合计数量" on_change="onchange_price(price, quantity, discount_rate, tax_rate)"/>
                            <field name="price" on_change="onchange_price(price, quantity, discount_rate, tax_rate)"/>
                            <field name="discount_rate" on_change="onchange_price(price, quantity, discount_rate, tax_rate)"/>
                            <field name="discount" sum="合计折扣额"/>
                            <field name="amount" sum="合计金额"/>
                            <field name="tax_rate" on_change="onchange_price(price, quantity, discount_rate, tax_rate)"/>
                            <field name="tax_amount" sum="合计税额"/>
                            <field name="subtotal" sum="价税合计的合计"/>
                            <field name="note"/>
                        </tree>
                    </field>
                    <group>
                        <group col="6" colspan="6">
                            <field name="discount_rate" on_change="onchange_discount_rate(discount_rate)"/>
                            <field name="discount_amount"/>
                            <field name="amount" />
                            <field name="create_uid" string="制单人"/>
                            <field name="validator_id"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="暂无备注信息"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <!-- 购货管理 action -->

        <record id="buy_rfq_action" model="ir.actions.act_window">
            <field name="name">购货订单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">buy.order</field>
            <field name="context">{}</field>
            <field name="domain">[('state','in',('draft', 'cancel', 'confirmed'))]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建购货订单
              </p>
            </field>
        </record>

        <record id="buy_order_action" model="ir.actions.act_window">
            <field name="name">购货单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">buy.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('state','not in',('draft', 'confirmed'))]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击此处创建一个购货单
              </p>
            </field>
        </record>
        <menuitem id="menu_buy_rfq_action" action="buy_rfq_action"
            parent="menu_buy_manage" sequence="1"/>
        <menuitem id="menu_buy_order_action" action="buy_order_action"
        	parent="menu_buy_manage" sequence="2"/>
	</data>
</openerp>
	